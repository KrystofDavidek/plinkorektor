{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es5",
    "downlevelIteration": true,
    "module": "es2015",
    "importHelpers": true,
    "lib": ["es2015", "dom"],
    "declaration": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": "."
  },
  "include": [
    "src/demo/ts",
    "src/main/ts",
    "src/test/ts",
    "node_modules/@ephox/**/*/api/Main.d.ts",
    "src/main/plugin",
    "src/main/Main.ts"
  ]
}
